<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>servlets.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherDashboardServlet</servlet-name>
        <servlet-class>servlets.TeacherDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <servlet-class>servlets.StudentDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddScheduleServlet</servlet-name>
        <servlet-class>servlets.AddScheduleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleListServlet</servlet-name>
        <servlet-class>servlets.ScheduleListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkAttendanceServlet</servlet-name>
        <servlet-class>servlets.MarkAttendanceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendanceServlet</servlet-name>
        <servlet-class>servlets.ViewAttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/AdminDashboardServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherDashboardServlet</servlet-name>
        <url-pattern>/TeacherDashboardServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <url-pattern>/StudentDashboardServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddScheduleServlet</servlet-name>
        <url-pattern>/AddScheduleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleListServlet</servlet-name>
        <url-pattern>/ScheduleListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkAttendanceServlet</servlet-name>
        <url-pattern>/MarkAttendanceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendanceServlet</servlet-name>
        <url-pattern>/ViewAttendanceServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
